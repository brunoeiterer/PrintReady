<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PrintReady.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PrintReady"
    xmlns:control="using:PrintReady.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PrintReady">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <control:Preview x:Name="Preview"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Grid.Row="0"
                         Grid.Column="0"/>

        <GridView x:Name="GalleryGrid" 
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AllowDrop="True"
                    DragOver="OnDragOver"
                    Drop="OnDrop"
                    Loaded="OnGalleryLoaded"
                    Grid.Row="1"
                    Grid.Column="0"/>

        <Button ToolTipService.ToolTip="Export Images"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="50" Height="50"
                Margin="20"
                Click="OnExportButtonClickAsync"
                Style="{StaticResource AccentButtonStyle}"
                Grid.Row="1"
                Grid.Column="0">

            <FontIcon FontFamily="Segoe Fluent Icons"
                              Glyph="&#xEE71;"
                              FontSize="24"/>
        </Button>

    </Grid>
</Window>
